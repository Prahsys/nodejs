{
  "name": "@prahsys/nodejs",
  "version": "0.0.1",
  "type": "module",
  "description": "Prahsys payment nodejs",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist"
  ],
  "main": "dist",
  "types": "dist",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Prahsys/nodejs.git"
  },
  "bugs": {
    "url": "https://github.com/Prahsys/nodejs/issues"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint --fix src --ext .js,.ts",
    "format": "prettier --write src",
    "clean": "git clean -xdf node_modules && rm -rf pnpm-lock.yaml dist",
    "prepare": "husky install",
    "prepack": "npm run build"
  },
  "keywords": [
    "prahsys",
    "payments",
    "nodejs"
  ],
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "author": {
    "name": "prahsys",
    "url": "https://prahsys.com"
  },
  "license": "MTI",
  "dependencies": {
    "neverthrow": "^8.2.0",
    "zod": "^3.25.20"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}